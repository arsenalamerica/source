{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/api"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/api"
        },
        "production": {}
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "env": {
          "VERCEL_ORG_ID": "team_3FcuJksDBvOKgDoo28ETlJjx",
          "VERCEL_PROJECT_ID": "prj_NqBSR0oCTmQTZlsi3Oq5qn8bOWfT"
        },
        "commands": [
          {
            "command": "yarn vercel pull --yes --token={args.token}",
            "forwardAllArgs": false
          },
          "yarn vercel build",
          "yarn vercel deploy --prebuilt > deployment-url.txt"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "port": 3333,
          "buildTarget": "api:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "api:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "api:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts"
      }
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx stylelint apps/branches/**/*.{css,scss}",
        "fix": true,
        "maxWarnings": 0
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": true,
        "maxWarnings": 0
      }
    }
  }
}
